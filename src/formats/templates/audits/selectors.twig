{% if data|length > 0 %}
   <section class="audit audit--selectors" id="selectors">
   	{% include 'audit-title.twig' with { title: 'Selectors' } %}
		{% for item in data %}
			{% if item.value is iterable %}
				<h3>{{item.label}}</h3>
				<ol>
   				{% for value in item.value %}

   					{% if value.name %}
   						<li>
                        <span class="count">{{value.count}}</span>
                        <em>{{value.name}}</em>
                     </li>
   					{% endif %}

               	{% if value.file %}
   						<li>
                        <code>{{value.selector}}</code>
                        <br /><em>{{value.file}}</em>
                     </li>
   					{% endif %}

               {% endfor %}
				</ol>
			{% else %}
				<h3>{{item.label}}: {{item.value}}</h3>
			{% endif %}
		{% endfor %}
   </section>
{% endif %}